<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.dao.UserDao">

    <resultMap type="com.water.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="tell" column="tell" jdbcType="VARCHAR"/>
        <result property="pass" column="pass" jdbcType="VARCHAR"/>
        <result property="roles" column="roles" jdbcType="INTEGER"/>
        <result property="addr" column="addr" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               name,
               tell,
               pass,
               roles,
               addr
        from water.user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select id,
               name,
               tell,
               pass,
               roles,
               addr
        from water.user limit #{offset}, #{limit}
    </select>
    <select id="query" resultMap="UserMap">
        select id,
               name,
               tell,
               pass,
               roles,
               addr
        from water.user
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
        id, name, tell, pass, roles, addr
        from water.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="tell != null and tell != ''">
                and tell = #{tell}
            </if>
            <if test="pass != null and pass != ''">
                and pass = #{pass}
            </if>
            <if test="roles != null">
                and roles = #{roles}
            </if>
            <if test="addr != null and addr != ''">
                and addr = #{addr}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into water.user(name, tell, pass,  addr)
        values (#{name}, #{tell}, #{pass},  #{addr})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.user(name, tell, pass, roles, addr)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tell}, #{entity.pass}, #{entity.roles}, #{entity.addr})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.user(name, tell, pass, roles, addr)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tell}, #{entity.pass}, #{entity.roles}, #{entity.addr})
        </foreach>
        on duplicate key update
        name = values(name) , tell = values(tell) , pass = values(pass) , roles = values(roles) , addr = values(addr)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update water.user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="tell != null and tell != ''">
                tell = #{tell},
            </if>
            <if test="pass != null and pass != ''">
                pass = #{pass},
            </if>
            <if test="roles != null">
                roles = #{roles},
            </if>
            <if test="addr != null and addr != ''">
                addr = #{addr},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from water.user
        where id = #{id}
    </delete>

</mapper>

