<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.dao.DeliverDao">

    <resultMap type="com.water.entity.Deliver" id="DeliverMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="tell" column="tell" jdbcType="VARCHAR"/>
        <result property="rate" column="rate" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DeliverMap">
        select id,
               name,
               tell,
               rate
        from water.deliver
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DeliverMap">
        select id,
               name,
               tell,
               rate
        from water.deliver limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DeliverMap">
        select
        id, name, tell, rate
        from water.deliver
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="tell != null and tell != ''">
                and tell = #{tell}
            </if>
            <if test="rate != null">
                and rate = #{rate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into water.deliver(name, tell, rate)
        values (#{name}, #{tell}, #{rate})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.deliver(name, tell, rate)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tell}, #{entity.rate})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.deliver(name, tell, rate)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tell}, #{entity.rate})
        </foreach>
        on duplicate key update
        name = values(name) , tell = values(tell) , rate = values(rate)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update water.deliver
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="tell != null and tell != ''">
                tell = #{tell},
            </if>
            <if test="rate != null">
                rate = #{rate},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from water.deliver
        where id = #{id}
    </delete>

</mapper>

