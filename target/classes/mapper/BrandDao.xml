<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.dao.BrandDao">

    <resultMap type="com.water.entity.Brand" id="BrandMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BrandMap">
        select id,
               name,
               price
        from water.brand
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BrandMap">
        select id,
               name,
               price
        from water.brand limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BrandMap">
        select
        id, name, price
        from water.brand
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into water.brand(name, price)
        values (#{name}, #{price})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.brand(name, price)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.price})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into water.brand(name, price)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.price})
        </foreach>
        on duplicate key update
        name = values(name) , price = values(price)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update water.brand
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from water.brand
        where id = #{id}
    </delete>

</mapper>

